

<!-- Cover -->
<section id="cover">
  <div class="container cover__container">
    <div class="row align-items-center justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <header class="cover__header">
          <h4 class="locover__title login_cover mb-4">
            멋사팅<br>
          </h4>
          <p id="p_title">혼코족을 위한 멤버 매칭서비스!</p>
        </header>
          <div class="cover__form">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
                <div class="form-group">
                  <%= f.label :email , class: 'form-label' %>
                  <%= f.email_field :email,placeholder: 'Example@likelion.org', autofocus: true, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :password ,class: 'form-label' %>
                  <%= f.password_field :password,placeholder: '비밀번호', autocomplete: 'off', class: 'form-control' %>
                </div>
                <% if devise_mapping.rememberable? %>
                  <div class="checkbox">
                    <%= f.label :remember_me do %>
                      <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
                    <% end %>
                  </div>
                <% end %>
                <%= f.submit  t('.sign_in', default: '로그인'), class: 'btn btn-primary' %>
                <a class="btn btn-primary" id="sign-up-btn" href="<%= new_registration_path(resource_name) %>" role="button">회원가입</a>
              <% end %>
          <%#= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- // Cover -->